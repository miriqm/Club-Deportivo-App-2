<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE499"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".PantallaComprobante">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="150dp"
        android:text="Club Deportivo"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Comprobante De Pago"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
    <!-- Layout Principal -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:background="@color/cardview_light_background"
        >
        <!-- Layout Nombre -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Nombre"
                android:textSize="15sp" />
            <TextView
                android:layout_width="235dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Karina Arias"
                android:textSize="15sp" />


        </LinearLayout>
        <!--Layout Numero de Socio -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Nro Socio"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="235dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="1426"
                android:textSize="15sp" />
        </LinearLayout>
    <!-- Layout Fecha Pago -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Fecha de Pago"
            android:textSize="15sp" />
        <TextView
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="24/06/2024"
            android:textSize="15sp" />

    </LinearLayout>

        <!-- Layout Monto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Monto"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtFechaPago"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="$18000"
            android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EDE499"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="Volver" />

        <Button
            android:id="@+id/btnImprimir"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="Imprimir" />

    </LinearLayout>

</LinearLayout>