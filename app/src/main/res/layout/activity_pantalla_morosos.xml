<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE499"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".PantallaMorosos">

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="Club Deportivo"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="Listado Socios Cuotas Vencidas"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />
    <!-- Layout Principal -->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <!-- Layout Encabezado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Fecha"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Nombre"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Nro Socio"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="$ Importe"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <!-- Layout Listado Datos de Socios -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#EFEEE7"
        android:gravity="center_horizontal"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Fecha"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nombre"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nro Socio"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="$ Importe"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#EFEEE7"
        android:gravity="center_horizontal"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Fecha"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nombre"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nro Socio"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="$ Importe"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EFEEE7"
        android:gravity="center_horizontal"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Fecha"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nombre"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nro Socio"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="$ Importe"
            android:textSize="15sp" />


    </LinearLayout>


    <!-- Layout Botones -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#EDE499"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="Volver" />

        <Button
            android:id="@+id/btnImprimir"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="PDF" />

    </LinearLayout>


</LinearLayout>